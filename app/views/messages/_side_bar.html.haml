.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__username 
        = current_user.name
      %ul.side-header__box__icons
        %li.side-header__box__menu__new-growp
          = link_to new_group_path, class: "contents__btn" do
            = icon('far', 'edit' ,class:"icon")
        %li.side-header__box__menu__edit-user
          = link_to "#", class: "contents__btn" do
            = icon('fas', 'cog',class:"icon")

  .side-header__group
    .side-header__group-list
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .side-header__group__group-name
            = group.name
          .side-header__group__message
            = group.show_last_message


